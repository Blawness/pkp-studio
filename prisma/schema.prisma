generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id                  String   @id @default(uuid())
  kode                String   @unique
  nama_pemegang       Json
  surat_hak           String
  no_sertifikat       String   @unique
  lokasi_tanah        String
  luas_m2             Float
  tgl_terbit          DateTime @db.Date
  surat_ukur          String
  nib                 String
  pendaftaran_pertama DateTime @db.Date
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      String // Consider using an enum if roles are fixed: enum Role { ADMIN USER } @default(USER)
  createdAt DateTime @default(now())
}

model ActivityLog {
  id        String   @id @default(uuid())
  user      String // User's name or ID. Consider relation to User model if full user details are needed.
  action    String
  details   String
  timestamp DateTime @default(now())
}

model TanahGarapanEntry {
  id                          String   @id @default(uuid())
  letakTanah                  String
  namaPemegangHak             String
  letterC                     String
  nomorSuratKeteranganGarapan String   @unique
  luas                        Float
  keterangan                  String?
  createdAt                   DateTime @default(now())
}
